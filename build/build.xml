<?xml version="1.0"?>
<project name="PersonalAssistant" default="copyToPTSAddonFolder" basedir=".">
    <property name="version" value="1" />

    <property name="addonhome" location="${user.home}/Documents/Elder Scrolls Online/live/AddOns" />
    <property name="addonhomePTS" location="${user.home}/Documents/Elder Scrolls Online/pts/AddOns" />
    <property name="addondir" location="${addonhome}/${ant.project.name}" />
    <property name="addondirPTS" location="${addonhomePTS}/${ant.project.name}" />
    <property name="srcdir" location="${basedir}/../PersonalAssistant" />
    <property name="tempdir" location="${basedir}/../temp" />
    <property name="targetdir" location="${basedir}/../target" />

    <target name="copyToLIVEAddonFolder">
        <delete dir="${addondir}"/>
        <copy todir="${addondir}">
            <fileset dir="${srcdir}"/>
        </copy>
        <replace file="${addondir}/${ant.project.name}.txt" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondir}/${ant.project.name}Banking/${ant.project.name}Banking.txt/" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondir}/${ant.project.name}Junk/${ant.project.name}Junk.txt/" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondir}/${ant.project.name}Loot/${ant.project.name}Loot.txt/" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondir}/${ant.project.name}Repair/${ant.project.name}Repair.txt/" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondir}/vars/Globals.lua" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
    </target>

    <target name="copyToPTSAddonFolder">
        <delete dir="${addondirPTS}"/>
        <copy todir="${addondirPTS}">
            <fileset dir="${srcdir}"/>
        </copy>
        <replace file="${addondirPTS}/${ant.project.name}.txt" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondirPTS}/${ant.project.name}Banking/${ant.project.name}Banking.txt/" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondirPTS}/${ant.project.name}Junk/${ant.project.name}Junk.txt/" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondirPTS}/${ant.project.name}Loot/${ant.project.name}Loot.txt/" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondirPTS}/${ant.project.name}Repair/${ant.project.name}Repair.txt/" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
        <replace file="${addondirPTS}/vars/Globals.lua" token="{BUILD_NUMBER}" value="999999" encoding="UTF-8"/>
    </target>

    <target name="makeNextMajorVersion" if="isMajorRelease">
        <property name="header" value="Generated file - do not modify!"/>
        <propertyfile file="version.properties" comment="${header}">
            <entry key="build.major" type="int" default="0" operation="+"/>
            <entry key="build.minor" type="int" value="0"/>
            <entry key="build.patch" type="int" value="0"/>
            <entry key="build.revision" type="int" default="0" operation="+" pattern="0"/>
        </propertyfile>
    </target>

    <target name="makeNextMinorVersion" if="isMinorRelease">
        <property name="header" value="Generated file - do not modify!"/>
        <propertyfile file="version.properties" comment="${header}">
            <entry key="build.minor" type="int" default="0" operation="+"/>
            <entry key="build.patch" type="int" value="0"/>
            <entry key="build.revision" type="int" default="0" operation="+" pattern="0"/>
        </propertyfile>
    </target>

    <target name="makeNextPatchVersion" if="isPatchRelease">
        <property name="header" value="Generated file - do not modify!"/>
        <propertyfile file="version.properties" comment="${header}">
            <entry key="build.patch" type="int" default="0" operation="+"/>
            <entry key="build.revision" type="int" default="0" operation="+" pattern="0"/>
        </propertyfile>
    </target>

    <target name="makeNextCustomVersion" if="isCustomRelease">
        <property name="header" value="Generated file - do not modify!"/>
        <propertyfile file="version.properties" comment="${header}">
            <entry key="build.revision" type="int" default="0" operation="+" pattern="0"/>
        </propertyfile>
        <input addproperty="custom.major" message="MAJOR version"/>
        <input addproperty="custom.minor" message="MINOR version"/>
        <input addproperty="custom.patch" message="PATCH version"/>
        <property name="releaseVersionDisplay" value="${custom.major}.${custom.minor}.${custom.patch}"/>
    </target>

    <target name="getCurrentBuildVersion">
        <property file="version.properties"/>
    </target>

    <target name="getNextVersionType">
        <input addproperty="nextVersionType" validargs="major,minor,patch,custom" defaultvalue="patch" message="Next release is?" />
        <condition property="isMajorRelease">
            <equals arg1="major" arg2="${nextVersionType}"/>
        </condition>
        <condition property="isMinorRelease">
            <equals arg1="minor" arg2="${nextVersionType}"/>
        </condition>
        <condition property="isPatchRelease">
            <equals arg1="patch" arg2="${nextVersionType}"/>
        </condition>
        <condition property="isCustomRelease">
            <equals arg1="custom" arg2="${nextVersionType}"/>
        </condition>
    </target>


    <target name="makeReleaseArchive" depends="getNextVersionType,makeNextMajorVersion,makeNextMinorVersion,makeNextPatchVersion,makeNextCustomVersion,getCurrentBuildVersion">
        <delete includeemptydirs="true" dir="${tempdir}" />

        <copy todir="${tempdir}/${ant.project.name}">
            <fileset dir="${srcdir}">
                <!--<exclude name="libs/Integrations/ItemSaver.lua"/>-->
                <!--<exclude name="libs/LibCustomMenu/LibCustomMenu.lua"/>-->
                <exclude name="libs/"/>
            </fileset>
        </copy>

        <property name="releaseVersionDisplay" value="${build.major}.${build.minor}.${build.patch}"/>
        <property name="releaseVersionRaw" value="${build.revision}"/>

        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}.txt" token="{VERSION_NUMBER}" value="${releaseVersionDisplay}" encoding="UTF-8"/>
        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}.txt" token="{BUILD_NUMBER}" value="${releaseVersionRaw}" encoding="UTF-8"/>

        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}Banking/${ant.project.name}Banking.txt/" token="{VERSION_NUMBER}" value="${releaseVersionDisplay}" encoding="UTF-8"/>
        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}Banking/${ant.project.name}Banking.txt/" token="{BUILD_NUMBER}" value="${releaseVersionRaw}" encoding="UTF-8"/>

        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}Junk/${ant.project.name}Junk.txt/" token="{VERSION_NUMBER}" value="${releaseVersionDisplay}" encoding="UTF-8"/>
        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}Junk/${ant.project.name}Junk.txt/" token="{BUILD_NUMBER}" value="${releaseVersionRaw}" encoding="UTF-8"/>

        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}Loot/${ant.project.name}Loot.txt/" token="{VERSION_NUMBER}" value="${releaseVersionDisplay}" encoding="UTF-8"/>
        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}Loot/${ant.project.name}Loot.txt/" token="{BUILD_NUMBER}" value="${releaseVersionRaw}" encoding="UTF-8"/>

        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}Repair/${ant.project.name}Repair.txt/" token="{VERSION_NUMBER}" value="${releaseVersionDisplay}" encoding="UTF-8"/>
        <replace file="${tempdir}/${ant.project.name}/${ant.project.name}Repair/${ant.project.name}Repair.txt/" token="{BUILD_NUMBER}" value="${releaseVersionRaw}" encoding="UTF-8"/>

        <replace file="${tempdir}/${ant.project.name}/vars/Globals.lua" token="{VERSION_NUMBER}" value="${releaseVersionDisplay}" encoding="UTF-8"/>
        <replace file="${tempdir}/${ant.project.name}/vars/Globals.lua" token="{BUILD_NUMBER}" value="${releaseVersionRaw}" encoding="UTF-8"/>


        <!--<replace file="${tempdir}/${ant.project.name}/${ant.project.name}.txt" token="libs/LibCustomMenu/LibCustomMenu.lua" value="" encoding="UTF-8" />-->
        <!--<replace file="${tempdir}/${ant.project.name}/${ant.project.name}.txt" token="libs/Integrations/ItemSaver.lua" value="" encoding="UTF-8" />-->

        <zip destfile="${targetdir}/${ant.project.name}-${releaseVersionDisplay}.${releaseVersionRaw}.zip">
            <fileset dir="${tempdir}" />
        </zip>
        <delete includeemptydirs="true" dir="${tempdir}" />
    </target>
</project>